
<div class="flex-row flex-no-wrap justify-center gap-15" id="main-container">
    <aside id="search" class="p-2">
        <div class="text-center"><h2>Search Bar</h2></div>
        <div class="text-center">
            <h3>Tags</h3>
            <div id="search-tags" class="flex-row flex-no-wrap justify-center">
                <!-- {{!-- Iterates through tags --}} -->
                <select id="search-tags">
                    {{#each tags as |t|}}
                    <option value="{{t.id}}">{{t.name}}</option>
                    
                </select>
            </div>
        </div>
    </aside>
    <section id="post-info" class="p-2">
        <div class="overflow-scroll">
            {{#each posts as |post|}}
            <div class="post-description" >
                <div class="flex-row flex-no-wrap">
                    <!-- {{!-- insert specific post title --}} -->
                    <div class="col-4 text-center"><h5><a href="/post/{{post.id}}">{{post.title}}</h5></a></div>
                    <!-- {{!-- insert specific post date --}} -->
                    <div class="col-4 text-center m-auto">Created on: {{format_date post.date_created}}</div>
                    <!-- {{!-- insert specific post tag --}} -->
                    <div class="col-4 text-center m-auto">Tags: {{t.name}}</div>
                </div>
                <img src="https://ichef.bbci.co.uk/news/976/cpsprodpb/16620/production/_91408619_55df76d5-2245-41c1-8031-07a4da3f313f.jpg" alt="Invention Image"class="home-post-image mt-3">
            </div>
            <div class="post-comments mb-5">
                <form id="add-comment">
                    <div class="flex-row flex-no-wrap justify-center mt-5">
                        <select id="add-comment-tag" class="p-1 pr-4">
                            <!-- {{!-- Iterates through tags --}} -->
                            <option value="tag 1">tag 1</option>
                        </select>
                        <textarea placeholder="Write a comment..." id="add-comment-text" class="ml-2"></textarea>    
                    </div>
                    <div class="flex-row flex-no-wrap justify-center mt-5">
                        <input type="button" value="Post" id="add-comment-submit" class="btn">    
                    </div>
                </form>
            </div>
            {{/each}}
            {{/each}}
        </div>
        
    </section>
    
    <aside id="updates" class="text-center p-2">
        <div>
            <h2>Updates</h2>
            <div class="flex-column flex-no-wrap">
                <!-- {{!-- iterate through updates --}} -->
                <div>
                    <!-- {{!-- insert date of update --}} -->
                    <p>Date</p>
                    <!-- {{!-- insert text describing update --}} -->
                    <p>Content</p>
                </div>     
            </div>
        </div>
    </aside>
</div>